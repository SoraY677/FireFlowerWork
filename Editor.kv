<EditorPanel> 
    PageLayout:
        border: 30
        swipe_threshold: .1
        

        # 1ページ目 : 
        # 花火の制作画面
        BoxLayout:
            orientation:"vertical"
            size_hint_y: 2

            # =====================花火玉の表示画面
            BoxLayout:
                
                # 位置花火玉の編集画面
                BoxLayout:
                    canvas:
                        Color:
                            rgba: 1,0,0,1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                # TODO: 他花火のストック画面
                # BoxLayout:
                #     Label:
                #         text:"hoge"

            # =============色選択パネル
            BoxLayout:
                orientation:"vertical"
                size_hint_y: 0.5
                # 一段目
                BoxLayout:
                    Button:
                        text:"red"
                        background_color: (0.9,0,0,1)
                    Button:
                        text:"orange"
                        background_color: (0.94,0.45,0,1)
                    Button:
                        text:"yellow"
                        background_color: (1,0.98,0,1)
                    Button:
                        text:"light green"
                        background_color: (0.58,0.7,0.2,1)
                    Button:
                        text:"green"
                        background_color: (0,0.8,0.26,1)
                    Button:
                        text:"light blue"
                        background_color: (0,0.68,0.9,1)
                BoxLayout:
                    Button:
                        text:"blue"
                        background_color: (0,0.6,0.74,1)
                    Button:
                        text:"deep blue"
                        background_color: (0.2,0.2,0.7,1)
                    Button:
                        text:"purple"
                        background_color: (0.6,0.08,0.6,1)
                    Button:
                        text:"pink"
                        background_color: (0.8,0,0.53)
                    Button:
                        text:"white"
                        background_color: (1,1,1,1)
                    Button:
                        text:"black"
                        background_color: (0,0,0,1)

            AnchorLayout:
                anchor_x:"right"
                size_hint_y: 0.4
                Button:
                    text:"complete"

        # 2ページ目 : 
        # 花火のシミュレーション画面
        BoxLayout:
            orientation:"vertical"
            Widget:
                id:"simulation_canvas"
                canvas:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Button:
                id:"simulation_start"
                text:"simulation start"