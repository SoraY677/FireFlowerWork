<EditorPanel> 
    PageLayout:
        border: 30
        swipe_threshold: .1
        

        # 1ページ目 : 
        # 花火の制作画面
        BoxLayout:
            orientation:"vertical"
            size_hint_y: 2

            # =====================花火玉の表示画面
            BoxLayout:
                
                # 位置花火玉の編集画面
                BoxLayout:
                    id:"edit_canvas"
                # TODO: 他花火のストック画面
                # BoxLayout:
                #     Label:
                #         text:"hoge"

            # =============色選択パネル
            BoxLayout:
                orientation:"vertical"
                size_hint_y: 0.5
                # 一段目
                BoxLayout:
                    Button:
                        text:"red"
                        background_color: (0.9,0,0,1)
                        on_press: root.choose_color(1)
                    Button:
                        text:"orange"
                        background_color: (0.94,0.45,0,1)
                        on_press:root.choose_color(2)
                    Button:
                        text:"yellow"
                        background_color: (1,0.98,0,1)
                        on_press: root.choose_color(3)
                    Button:
                        text:"light green"
                        background_color: (0.58,0.7,0.2,1)
                        on_press: root.choose_color(4)
                    Button:
                        text:"green"
                        background_color: (0,0.8,0.26,1)
                        on_press: root.choose_color(5)
                    Button:
                        text:"light blue"
                        background_color: (0,0.68,0.9,1)
                        on_press: root.choose_color(6)
                BoxLayout:
                    Button:
                        text:"blue"
                        background_color: (0,0.6,0.74,1)
                        on_press: root.choose_color(7)
                    Button:
                        text:"deep blue"
                        background_color: (0.2,0.2,0.7,1)
                        on_press: root.choose_color(8)
                    Button:
                        text:"purple"
                        background_color: (0.6,0.08,0.6,1)
                        on_press: root.choose_color(9)
                    Button:
                        text:"pink"
                        background_color: (0.8,0,0.53,1)
                        on_press: root.choose_color(10)
                    Button:
                        text:"white"
                        background_color: (1,1,1,1)
                        on_press: root.choose_color(11)
                    Button:
                        text:"black"
                        background_color: (0,0,0,1)
                        on_press: root.choose_color(12)

            AnchorLayout:
                anchor_x:"right"
                size_hint_y: 0.4
                Button:
                    text:"complete"

        # 2ページ目 : 
        # 花火のシミュレーション画面
        BoxLayout:
            orientation:"vertical"
            Widget:
                id:"simulation_canvas"
                canvas:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Button:
                id:"simulation_start"
                text:"simulation start"